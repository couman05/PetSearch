@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap core CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ApNbgh9B+YI2QZz3qJx9TXgxzjYpMUNyTB1yYRw7oW0dtMn3SRy2IStUxJ9tq3Y4" crossorigin="anonymous">

    <!-- Custom styles for this template -->
    <style>

        .center {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 80vh;
        }


        .display-3 {
            font-size: 170px;
            font-weight: 400;
        }

        .btn-primary {
            color: #fff;
            background-color: rgba(0,0,0,0.5);
            border-color: darkolivegreen;
            box-color: inset 0 0 0 8px darkolivegreen;
            font-size: 35px;
        }

            .btn-check:checked + .btn-primary, .btn-primary.active {
                color: #fff;
                background-color: darkolivegreen;
                border-color: darkolivegreen;
                box-shadow: inset 0 0 0 8px darkolivegreen;
            }

        .btn-secondary {
            color: #fff;
            background-color: rgba(0,0,0,0.5);
            border-color: rgba(0,0,0,0.5);
        }

        .body {
            background-image: url('./images/background_homepage/catsdogs.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            
           
        }

        .btn-primary:hover:not(:checked) {
            background-color: darkolivegreen;
            border-color: darkolivegreen;
        }

        .btn-secondary:hover:not(:checked) {
            background-color: black;
            border-color: black;
        }
        .text-center{
            margin-top:5vh;
        }

    </style>

</head>

<body class="body">



    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">PetSearch</a>
        </div>
    </nav>


    <!-- Bootstrap core JavaScript -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-AhRCv9XWdcF8xqf3D6p3S6szlG6U/dFqgwZxFaXA3Y1YiDTTUz8Q5+l5IQ1zfuIl" crossorigin="anonymous"></script>
    <main role="main">
        <div class="text-center">
            <h1 class="display-3">I'm a:</h1>
            <div class="btn-group">
                <input type="radio" class="btn-check" name="options" id="person-btn" autocomplete="off" checked>
                <label class="btn btn-primary" for="person-btn">Person</label>

                <input type="radio" class="btn-check" name="options" id="vet-btn" autocomplete="off">
                <label class="btn btn-primary" for="vet-btn">Vet</label>
            </div>
            <div>
                <a asp-area="" asp-controller="Persons" asp-action="Register" class="btn btn-secondary mt-3" id="person-signup-btn"> Sign up</a>
                <a asp-area="" asp-controller="Persons" asp-action="Login" class="btn btn-secondary mt-3" id="person-signin-btn"> Sign in</a>
                <a asp-area="" asp-controller="Vets" asp-action="Register" class="btn btn-secondary mt-3" id="vet-signup-btn" style="display:none;"> Sign up</a>
                <a asp-area="" asp-controller="Vets" asp-action="Login" class="btn btn-secondary mt-3" id="vet-signin-btn" style="display:none;"> Sign in</a>
            </div>
        </div>
    </main>
    <script>
        const personBtn = document.getElementById('person-btn');
        const vetBtn = document.getElementById('vet-btn');
        const personSignupBtn = document.getElementById('person-signup-btn');
        const personSigninBtn = document.getElementById('person-signin-btn');
        const vetSignupBtn = document.getElementById('vet-signup-btn');
        const vetSigninBtn = document.getElementById('vet-signin-btn');

        personBtn.addEventListener('click', function () {
            personSignupBtn.style.display = 'inline-block';
            personSigninBtn.style.display = 'inline-block';
            vetSignupBtn.style.display = 'none';
            vetSigninBtn.style.display = 'none';
        });

        vetBtn.addEventListener('click', function () {
            personSignupBtn.style.display = 'none';
            personSigninBtn.style.display = 'none';
            vetSignupBtn.style.display = 'inline-block';
            vetSigninBtn.style.display = 'inline-block';
        });
    </script>



</body>
</html>