@model IEnumerable<PetSearch2.Models.Animals>

@{
    ViewData["Title"] = "Home Page";
}

<h4 class="text-center text-uppercase">List of animals</h4>

<p>
    <a asp-action="NewAnimal" class="btn btn-sm btn-primary rounded-0 text-uppercase"><i class="fas fa-plus-circle"></i> Add New</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Animal_Name)</th>
            <th>@Html.DisplayNameFor(model => model.Race)</th>
            <th>@Html.DisplayNameFor(model => model.Color)</th>
            <th>@Html.DisplayNameFor(model => model.Gender)</th>
            <th>@Html.DisplayNameFor(model => model.Height)</th>
            <th>@Html.DisplayNameFor(model => model.Species)</th>
            <th>@Html.DisplayNameFor(model => model.Location_Id)</th>
            <th>@Html.DisplayNameFor(model => model.Person_Id)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var animal in Model)
        {
            <tr>
                <td>
                    <img src="~/images/@animal.Animal_Image"
                         class="rounded-circle"
                         height="40" width="40"
                     asp-append-version="true" />
                    @animal.Animal_Name
                </td>
                <td>@animal.Race</td>
                <td>@animal.Color</td>
                <td>@animal.Gender</td>
                <td>@animal.Height</td>
                <td>@animal.Species</td>
                <td>@animal.Location_Id</td>
                <td>@animal.Person_Id</td>
            </tr>
        }
    </tbody>
</table>   